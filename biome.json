{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":BUN:",
							":NODE:",
							["npm:*", "npm:*/**"],
							":PACKAGE_WITH_PROTOCOL:",
							":URL:",
							":PACKAGE:",
							["/**"],
							["#*", "#*/**"],
							":PATH:"
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double"
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"formatter": {
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	}
}
